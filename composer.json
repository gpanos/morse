{
    "name": "gpanos/morse",
    "description": "A command-line tool that translates latin text to morse code.",
    "keywords": [
        "php",
        "morse"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Dimitris Karapanos",
            "email": "karapanos.dimitris@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "symfony/console": "^4.0|^5.0"
    },
    "autoload": {
        "psr-4": {
            "Morse\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "pestphp/pest": "^1.7"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    },
    "scripts": {
        "test:unit": "pest --colors=always"
    },
    "bin": [
        "morse"
    ]
}